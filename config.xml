<?xml version="1.0" encoding="UTF-8" ?>
<widget xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0" id="uk.ac.ox.it.mobileoxford" versionCode="3" version="0.2.0">
    <name>Mobile Oxford</name>
    <description>Your university and city on the move</description>
    <author href="https://m.ox.ac.uk" email="mobileoxford@it.ox.ac.uk">Mobile Oxford team, IT Services, University of Oxford</author>

    <preference name="prerendered-icon" value="true" />
    <preference name="show-splash-screen-spinner" value="false" />
    <preference name="ios-statusbarstyle" value="black-opaque" /> 

    <preference name="android-targetSdkVersion" value="14" /> 
    <preference name="SplashScreen" value="mobile_oxford_splash" />

    <feature name="Calendar">
        <param name="ios-package" value="Calendar" />
        <param name="android-package" value="nl.xservices.plugins.Calendar" />
    </feature>
    <feature name="PushPlugin">
        <param name="ios-package" value="PushPlugin" />
        <param name="android-package" value="com.phonegap.plugins.PushPlugin" />
    </feature>
    <feature name="Contacts">
        <param name="ios-package" value="CDVContacts" />
        <param name="android-package" value="org.apache.cordova.contacts.ContactManager" />
    </feature>

    <access origin="http://opendata-staging.oucs.ox.ac.uk:8005" />
    <access origin="http://new.m.ox.ac.uk" />
    <access origin="http://api.m.ox.ac.uk" />
    <access origin="http://www.google.com" />
    <access origin="http://a.tiles.mapbox.com"  />
</widget>
