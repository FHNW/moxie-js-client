{{#if attributes.title }}
    <h3>{{ attributes.title }}</h3>
{{/if}}
<ul>
    {{#if attributes.author }}
        <li><strong>Author:</strong> {{ attributes.author }}</li>
    {{/if}}
    {{#if attributes.publisher }}
        <li><strong>Publisher:</strong> {{ attributes.publisher }}</li>
    {{/if}}
    {{#if attributes.description }}
        <li><strong>Description:</strong> {{ attributes.description }}</li>
    {{/if}}
    {{#if attributes.isbns}}
        <li><strong>ISBN:</strong>
        {{#attributes.isbns}}
            {{ this }}
        {{/attributes.isbns}}</li>
    {{/if}}
    {{#if attributes.issns}}
        <li><strong>ISBN:</strong>
        {{#attributes.issns}}
            {{ this }}
        {{/attributes.issns}}</li>
    {{/if}}
</ul>
